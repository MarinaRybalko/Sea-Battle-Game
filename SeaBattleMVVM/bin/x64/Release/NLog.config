<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Debug" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="myvar" value="myvalue"/>


  <targets>
    <target xsi:type="File" name="Main" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} |${callsite} | ${uppercase:${level}} | ${message}${newline}" />
    <target xsi:type="File" name="Error" fileName="${basedir}/logs/error/${shortdate}.log"
            layout="${longdate} | ${callsite} | ${uppercase:${level}} | ${message}${newline}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" maxlevel="Warn" writeTo="Main" />
    <logger name="*" minlevel="Error" writeTo="Error" />
  </rules>
</nlog>
